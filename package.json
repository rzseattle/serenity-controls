{
    "name": "serenity-controls",
    "version": "2.0.4",
    "description": "",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "scripts": {
        "watch": "npm-run-all -p 'build:* -- --watch'",
        "dev": "npm-run-all -p storybook 'build:modules -- --watch'",
        "build": "npm-run-all 'build:*'",
        "build:prettier": "prettier --write src",
        "build:modules": "tsm \"src/**/*.module.sass\" ",
        "build:typescript": "tsc --project ./ --outDir ./lib ",
        "build:sass": "cpx 'src/**/*.sass' lib",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook -ci --quiet -c ./docs/stories/.storybook",
        "prepare": "npm-run-all build:modules build:sass build:typescript",
        "husky-run": "echo 1",
        "lint": "eslint src/**",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --watchAll=false --coverage"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn run build"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "prettier": {
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 120,
        "arrowParens": "always",
        "trailingComma": "all"
    },
    "files": [
        "lib/**/*",
        "sass/**/*",
        "src/**/*"
    ],
    "jest": {
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.{ts,tsx}",
            "!**/node_modules/**",
            "!**/*.stories.{ts,tsx}"
        ],
        "moduleNameMapper": {
            "\\.(css|scss|sass)$": "identity-obj-proxy"
        },
        "testEnvironment": "jsdom",
        "roots": [
            "<rootDir>/src"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/setupTests.js"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "dependencies": {
        "date-fns": "^2.28.0",
        "i18next": "^19.8.4",
        "immer": "^9.0.12",
        "react": "^17.0.1",
        "react-date-range": "^1.4.0",
        "react-dom": "^17.0.1",
        "react-hook-form": "^7.25.3",
        "react-icons": "^4.3.1",
        "use-immer": "^0.6.0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/plugin-proposal-class-properties": "^7.16.7",
        "@babel/plugin-proposal-private-methods": "^7.16.11",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@storybook/addon-actions": "^6.4.19",
        "@storybook/addon-contexts": "^5.3.21",
        "@storybook/addon-essentials": "^6.4.19",
        "@storybook/addon-links": "^6.4.19",
        "@storybook/addon-storysource": "^6.4.19",
        "@storybook/react": "^6.4.19",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.3",
        "@testing-library/user-event": "^13.5.0",
        "@types/i18next": "^13.0.0",
        "@types/jest": "^27.4.1",
        "@types/react": "^17.0.39",
        "@types/react-date-range": "^1.4.3",
        "@types/react-dom": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "core-js": "^3.20.2",
        "cpx": "^1.5.0",
        "eslint": "^8.5.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest-cli": "^27.5.1",
        "node-glob": "^1.2.0",
        "node-sass": "^6.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "2.5.1",
        "pretty-quick": "^3.1.3",
        "react-hooks-testing-library": "^0.6.0",
        "react-test-renderer": "^17.0.2",
        "rimraf": "^3.0.2",
        "storybook": "6.4.10",
        "storybook-addon-pseudo-states": "^1.0.0",
        "ts-key-enum": "^2.0.11",
        "typed-scss-modules": "^3.4.0",
        "typedoc": "^0.22.10",
        "typescript": "^4.5.3"
    },
    "resolutions": {}
}
